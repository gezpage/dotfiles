URxvt.perl-ext-common:      default,url-select,keyboard-select,resize-font,selection_to_clipboard
URxvt.url-select.launcher:  google-chrome-stable
URxvt.url-select.underline: false
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search
URxvt.url-select.autocopy:  true
URxvt.clipboard.autocopy:   true

! See /usr/lib/urxvt/perl/resize-font
URxvt.resize-font.smaller: C-minus
URxvt.resize-font.bigger: C-equal
URxvt.resize-font.reset: C-BackSpace
URxvt.resize-font.show: C-question
